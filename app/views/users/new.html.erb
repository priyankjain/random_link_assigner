<h1>Register</h1>
<%= form_for @user do |u| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
                <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= u.label :name %><br/>
        <%= u.text_field :name %>
    </p>
    <p> 
        <%= u.label :email %><br/>
        <%= u.text_field :email %>
    </p>
    <p>
        <%= u.label :password %><br/>
        <%= u.password_field :password %>
    </p>
    <p>
        <%= u.label :password_confirmation %><br/>
        <%= u.password_field :password_confirmation %>
    </p>
    <p class='button'>
        <%= u.submit %>
    </p>
<% end %>
